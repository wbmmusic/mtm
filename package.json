{
    "name": "mtm",
    "version": "0.0.38",
    "private": true,
    "license": "UNLICENSED",
    "author": {
        "name": "WBM Tek",
        "url": "https://www.wbmtek.com",
        "email": "info@wbmtek.com"
    },
    "description": "MTM Composer",
    "homepage": "./",
    "main": "public/main.js",
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.2.0",
        "@mui/material": "^7.2.0",
        "@mui/system": "^7.2.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "axios": "^1.10.0",
        "caniuse-lite": "^1.0.30001727",
        "electron-updater": "^6.6.2",
        "framer-motion": "^12.23.0",
        "react": "^19.1.0",
        "react-beautiful-dnd": "^13.1.1",
        "react-dom": "^19.1.0",
        "react-lite-youtube-embed": "^2.5.1",
        "react-router-dom": "^7.6.3",
        "react-scripts": "5.0.1",
        "react-simple-typewriter": "^5.0.1",
        "serialport": "^13.0.0",
        "usb": "^2.15.0",
        "uuid": "^11.1.0",
        "wbm-version-manager": "^0.0.69",
        "web-vitals": "^5.0.3"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "dev": "nf start",
        "package": "electron-builder build -c.extraMetadata.main=build/main.js --publish never",
        "deploy": "electron-builder build -c.extraMetadata.main=build/main.js --publish always",
        "upload": "pnpm build && pnpm backup && pnpm deploy ",
        "electron": "electron .",
        "mac": "pnpm && pnpm build && node copyPlist.js && pnpm deploy",
        "linux": "pnpm && pnpm build && pnpm deploy",
        "try": "pnpm && pnpm build && pnpm package",
        "refresh": "pnpm upgrade --latest",
        "backup": "git add . && git commit -m %NPM_PACKAGE_VERSION% && git push origin main",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "productName": "MTM",
        "appId": "com.wbm.mtm",
        "copyright": "WBM Tek",
        "extends": null,
        "npmRebuild": false,
        "afterSign": "./notarize.js",
        "files": [
            "build/**/*",
            "electron/*"
        ],
        "extraResources": [
            "public/sounds/*",
            "public/images/*"
        ],
        "mac": {
            "icon": "public/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist"
        },
        "dmg": {
            "sign": false,
            "icon": "public/dmg.icns"
        },
        "win": {
            "icon": "public/icon.ico",
            "publisherName": "William Mareci"
        },
        "linux": {
            "target": "AppImage",
            "vendor": "WBM Tek",
            "category": "Education"
        }
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wbmmusic/mtm.git"
    },
    "devDependencies": {
        "@electron/notarize": "^3.0.1",
        "electron": "^37.2.0",
        "electron-builder": "^26.0.12",
        "foreman": "^3.0.1"
    },
    "packageManager": "pnpm@9.2.0+sha512.98a80fd11c2e7096747762304106432b3ddc67dcf54b5a8c01c93f68a2cd5e05e6821849522a06fb76284d41a2660d5e334f2ee3bbf29183bf2e739b1dafa771"
}