  "scripts": {
    "start": "vite",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "build-electron": "vite build",
    "build": "vite build",
    "type-check-main": "tsc --noEmit --project tsconfig-main.json",
    "test": "vitest",
    "preview": "vite preview",
    "dev": "electron-forge start",
    "dev:manual": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron-forge start\"",
    "package": "pnpm build && electron-forge package",
    "make": "pnpm build && electron-forge make",
    "publish": "pnpm build && electron-forge publish",
    "release": "tsx scripts/release.ts",
    "start-electron": "electron-forge start",
    "upload": "pnpm build && pnpm backup && pnpm publish",
    "electron": "electron .",
    "mac": "pnpm build && electron-forge make --platform=darwin",
    "linux": "pnpm && pnpm build && electron-forge make --platform=linux",
    "win": "pnpm && pnpm build && electron-forge make --platform=win32",
    "try": "pnpm && pnpm build && pnpm package",
    "refresh": "pnpm upgrade --latest",
    "backup": "git add . && git commit -m %NPM_PACKAGE_VERSION% && git push origin main"
  },
  "config": {
    "forge": "./forge.config.ts"
  },
