{
    "name": "mtm",
    "version": "0.0.37",
    "private": true,
    "license": "UNLICENSED",
    "author": {
        "name": "WBM Tek",
        "url": "https://www.wbmtek.com",
        "email": "info@wbmtek.com"
    },
    "description": "MTM Composer",
    "homepage": "./",
    "main": "public/main.js",
    "dependencies": {
        "@emotion/react": "^11.11.4",
        "@emotion/styled": "^11.11.5",
        "@mui/icons-material": "^5.15.15",
        "@mui/material": "^5.15.15",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^15.0.2",
        "@testing-library/user-event": "^14.5.2",
        "axios": "^1.6.8",
        "caniuse-lite": "^1.0.30001611",
        "electron-updater": "^6.1.8",
        "framer-motion": "^11.1.5",
        "react": "^18.2.0",
        "react-beautiful-dnd": "^13.1.1",
        "react-dom": "^18.2.0",
        "react-lite-youtube-embed": "^2.4.0",
        "react-router-dom": "^6.22.3",
        "react-scripts": "5.0.1",
        "react-simple-typewriter": "^5.0.1",
        "serialport": "^12.0.0",
        "usb": "^2.12.1",
        "uuid": "^9.0.1",
        "wbm-version-manager": "^0.0.69",
        "web-vitals": "^3.5.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "dev": "nf start",
        "package": "electron-builder build -c.extraMetadata.main=build/main.js --publish never",
        "deploy": "electron-builder build -c.extraMetadata.main=build/main.js --publish always",
        "upload": "yarn build && yarn backup && yarn deploy ",
        "electron": "electron .",
        "mac": "yarn && yarn build && node copyPlist.js && yarn deploy",
        "linux": "yarn && yarn build && yarn deploy",
        "try": "yarn && yarn build && yarn package",
        "refresh": "yarn upgrade --latest",
        "backup": "git add . && git commit -m %NPM_PACKAGE_VERSION% && git push origin main",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "productName": "MTM",
        "appId": "com.wbm.mtm",
        "copyright": "WBM Tek",
        "extends": null,
        "npmRebuild": false,
        "afterSign": "./notarize.js",
        "files": [
            "build/**/*",
            "electron/*"
        ],
        "extraResources": [
            "public/sounds/*",
            "public/images/*"
        ],
        "mac": {
            "icon": "public/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist"
        },
        "dmg": {
            "sign": false,
            "icon": "public/dmg.icns"
        },
        "win": {
            "icon": "public/icon.ico",
            "publisherName": "William Mareci"
        },
        "linux": {
            "target": "AppImage",
            "vendor": "WBM Tek",
            "category": "Education"
        }
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wbmmusic/mtm.git"
    },
    "devDependencies": {
        "electron": "^30.0.0",
        "electron-builder": "^24.13.3",
        "electron-notarize": "^1.2.2",
        "foreman": "^3.0.1"
    }
}
