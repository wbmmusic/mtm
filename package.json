  "main": ".vite/build/main.js",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hello-pangea/dnd": "^18.0.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@mui/system": "^7.3.3",
    "axios": "^1.12.2",
    "caniuse-lite": "^1.0.30001751",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.24",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-lite-youtube-embed": "^2.5.6",
    "react-router-dom": "^7.9.4",
    "react-simple-typewriter": "^5.0.1",
    "serialport": "^13.0.0",
    "usb": "^2.16.0",
    "uuid": "^13.0.0",
    "wbm-version-manager": "^0.0.69"
  },
  "scripts": {
    "start": "vite",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "build-electron": "vite build",
    "build": "vite build",
    "type-check-main": "tsc --noEmit --project tsconfig-main.json",
    "test": "vitest",
    "preview": "vite preview",
    "dev": "electron-forge start",
    "dev:manual": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron-forge start\"",
    "package": "pnpm build && electron-forge package",
    "make": "pnpm build && electron-forge make",
    "publish": "pnpm build && electron-forge publish",
    "start-electron": "electron-forge start",
    "upload": "pnpm build && pnpm backup && pnpm publish",
    "electron": "electron .",
    "mac": "pnpm build && electron-forge make --platform=darwin",
    "linux": "pnpm && pnpm build && electron-forge make --platform=linux",
    "win": "pnpm && pnpm build && electron-forge make --platform=win32",
    "try": "pnpm && pnpm build && pnpm package",
    "refresh": "pnpm upgrade --latest",
    "backup": "git add . && git commit -m %NPM_PACKAGE_VERSION% && git push origin main"
  },
  "config": {
    "forge": "./forge.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wbmmusic/mtm.git"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron-forge/shared-types": "^7.10.2",
    "@electron/notarize": "^3.1.0",
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.1"
  }
}
